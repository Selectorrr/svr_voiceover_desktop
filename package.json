{
  "name": "svr_voiceover_desktop",
  "version": "1.3.4",
  "description": "Desktop version for SVR_VOICEOVER",
  "license": "Apache-2.0",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac",
    "dist:dir": "electron-builder --dir"
  },
  "homepage": "https://boosty.to/synthvoiceru",
  "author": {
    "name": "Selector",
    "email": "selectorrr@yandex.ru",
    "url": "https://boosty.to/synthvoiceru"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "electron": "^36.0.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "dockerode": "^4.0.6",
    "electron-progressbar": "^2.2.1",
    "electron-squirrel-startup": "^1.0.1"
  },
  "build": {
    "productName": "SVR Voiceover Desktop",
    "appId": "ru.synthvoice.voiceover",

    "asar": true,
    "asarUnpack": ["**/*.node"],

    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "assets/**",
      "!samples/**",
      "!**/*.map",
      "!**/*.md",
      "!**/.*/**",
      "!**/test{,s}/**",
      "!**/__tests__/**",
      "!**/node_modules/**/{test,__tests__,docs,example,examples}/**"
    ],

    "compression": "maximum",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "electronLanguages": ["en-US", "ru"],

    "directories": { "buildResources": "assets" },

    "win": { "icon": "assets/icon.ico", "target": "nsis" },
    "mac": { "icon": "assets/icon.icns" },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["deb", "AppImage"],
      "category": "AudioVideo",
      "artifactName": "${productName}_${version}_${arch}.${ext}"
    }
  }
}
